        android:id="@+id/welcome"
        android:paddingTop="150dp"
        android:layout_gravity="center_horizontal|top"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textSize="30dp"/>
</FrameLayout>
